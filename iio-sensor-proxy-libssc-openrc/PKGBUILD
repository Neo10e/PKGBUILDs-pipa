pkgname=iio-sensor-proxy-libssc-openrc
pkgver=3.8
pkgrel=1
pkgdesc='IIO accelerometer sensor to input device proxy (OpenRC init scripts)'
arch=('any')
url='https://gitlab.freedesktop.org/hadess/iio-sensor-proxy/'
license=('GPL-2.0-or-later')
depends=('openrc' 'iio-sensor-proxy-libssc')
_pkgname=iio-sensor-proxy
install="$pkgname.install"
source=("$_pkgname-libssc.initd")
sha512sums=('c4a2fa18116c2e81209b1da3bb8d1a938fc2f25d3f1b9c334beb255eba0df36bc259a3d36ba1c9d2cbe1cf6b944d0ad6fa54aa0507210a90c408a3ceaca542dc')

package() {
	install -Dm755 "$srcdir"/$_pkgname-libssc.initd "$pkgdir"/etc/init.d/$_pkgname-libssc
}
