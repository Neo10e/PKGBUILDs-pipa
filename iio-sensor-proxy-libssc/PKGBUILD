pkgname=iio-sensor-proxy-libssc
pkgver=3.8
pkgrel=3
pkgdesc='IIO accelerometer sensor to input device proxy'
arch=('x86_64' 'aarch64')
url='https://gitlab.freedesktop.org/hadess/iio-sensor-proxy/'
license=('GPL-2.0-or-later')
depends=('libgudev' 'glib2' 'polkit' 'libssc>=0.2.1' 'dbus')
makedepends=('gtk3' 'meson')
checkdepends=('python-gobject' 'python-dbusmock' 'python-psutil' 'umockdev')
# https://gitlab.freedesktop.org/hadess/iio-sensor-proxy/-/archive/ssc/iio-sensor-proxy-ssc.tar.gz
#_branch=ssc
_pkgname=iio-sensor-proxy
source=("$url/-/archive/$pkgver/$_pkgname-$pkgver.tar.gz")
sha512sums=('9cca8d706c531c9a2e34dfebdc8673a1765b615533e3f7776118c74cb1ce145e472203c6c7804d35701c22cc93755609829bc3817c5920d5961249d7e8de87c6')

build() {
  mkdir $_pkgname-$pkgver/build
  cd $_pkgname-$pkgver/build

  artix-meson .. \
    -Dsystemdsystemunitdir=false \
    -Db_lto=true # \
		# -Dssc-support=true

  ninja
}

check() {
  cd $_pkgname-$pkgver/build

#  needs French locale
#  ninja test
}

package() {
  provides=(iio-sensor-proxy)
  conflicts=(iio-sensor-proxy)
  
  cd $_pkgname-$pkgver/build
   
  DESTDIR="$pkgdir" ninja install
  
}
