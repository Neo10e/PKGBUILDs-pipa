pkgname="qbootctl-openrc"
pkgdesc="Mark current boot as successful in Android A/B interface"
pkgver=0.2.2
pkgrel=1
arch=('aarch64')
url="https://github.com/linux-msm/qbootctl"
license=('GPL-3.0-or-later')
depends=('openrc' 'qbootctl')
install="$pkgname.install"
source=('qbootctl-openrc.initd')
sha512sums=('da586749da1dd63e19f2bbc361b8c6689a713f4ea9d46d5f299c574ceda14aedad6c6f0fb5849c88cc99904a38a7318456a21417d212c147dd9d367752676a1e')

package() {
	install -Dm755 "$srcdir/$pkgname.initd" "$pkgdir/etc/init.d/qbootctl"
}
